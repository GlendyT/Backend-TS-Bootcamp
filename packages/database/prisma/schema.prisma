generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int     @id @default(autoincrement())
  name      String
  slug      String
  vinyls    Vinyl[]
}

model VinylCondition {
  id        Int     @id @default(autoincrement())
  condition String  @unique
  price     Float
  vinyls    Vinyl[]
}

model Vinyl {
  id          Int            @id @default(autoincrement())
  title       String
  artist      String
  image       String
  category    Category       @relation(fields: [categoryId], references: [id])
  categoryId  Int
  condition   VinylCondition @relation(fields: [conditionId], references: [id])
  conditionId Int
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}
